<!-- //seperate header ejs file for the header -->
<%- include('partials/header') -%>






  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <!-- //grab ever post from all users and display them by data using a for loop -->
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/profile/<%= posts[i].createdByName%>&<%= posts[i].user%>">
              <%= posts[i].createdByName%>
              <a>
            <!-- //link to the individual post name by the posts unique id -->
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
  <!-- //seperate header ejs file for the header -->
<%- include('partials/footer') -%>